---
import { cn } from '@/utils'

import type { CollectionEntry } from 'astro:content'

type Props = {
	entry: CollectionEntry<'projects'>
}

const { entry } = Astro.props

const { title, description, demoURL, altText, imagePath } = entry.data
---

<a
	class={cn(
		'flex flex-col gap-y-3 rounded-2xl border border-border bg-primary-foreground transition-all hover:border-foreground/25 hover:shadow-sm'
	)}
	href={`/${entry.collection}/${entry.slug}`}
>
	<img src={imagePath}
		alt={altText}
		class='h-48 w-full rounded-2xl rounded-bl-none rounded-br-none object-cover'
		loading='eager'/>
	<div class='flex flex-col gap-y-0.5 px-5 py-4'>
		<h3 class='text-lg font-semibold'>{title}</h3>
		<p class='text-sm'>{description}</p>
	</div>
</a>
